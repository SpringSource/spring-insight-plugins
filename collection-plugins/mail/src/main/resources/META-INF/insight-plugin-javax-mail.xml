<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://www.springframework.org/schema/beans"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
	xmlns:insight="https://www.springframework.org/schema/insight-idk"
	xsi:schemaLocation="https://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd
		https://www.springframework.org/schema/insight-idk https://www.springframework.org/schema/insight-idk/insight-idk-1.0.xsd">

	<insight:plugin name="javax-mail" version="${project.version}" publisher="SpringSource" />

	<insight:operation-view operation="javax.mail.send" template="com/springsource/insight/plugin/mail/mail.ftl"/>

    <bean id="mailPluginRuntimeDescriptor"
          class="com.springsource.insight.plugin.mail.MailPluginRuntimeDescriptor"
          factory-method="getInstance"
          lazy-init="true"
        />
    <bean id="mailPluginSendExternalResourceAnalyzer"
          class="com.springsource.insight.plugin.mail.MailSendExternalResourceAnalyzer"
          factory-method="getInstance"
          lazy-init="true"
        />
    <bean id="mailPluginSendMetricsGenerator"
          class="com.springsource.insight.plugin.mail.MailSendMetricsGenerator"
          factory-method="getInstance"
          lazy-init="true"
        />
</beans>
