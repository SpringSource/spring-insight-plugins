<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://www.springframework.org/schema/beans"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
	xmlns:insight="https://www.springframework.org/schema/insight-idk"
	xsi:schemaLocation="https://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd
		https://www.springframework.org/schema/insight-idk https://www.springframework.org/schema/insight-idk/insight-idk-1.0.xsd">

	<insight:plugin name="spring-core" version="${project.version}" publisher="SpringSource" />

    <insight:operation-view operation="spring_app_listener" template="com/springsource/insight/plugin/springcore/spring_app_listener.ftl"/>
    <insight:operation-view operation="spring_classpath_scan" template="com/springsource/insight/plugin/springcore/spring_classpath_scan.ftl"/>
    <insight:operation-view operation="spring_event_publish" template="com/springsource/insight/plugin/springcore/spring_event_publish.ftl"/>
    <insight:operation-view operation="spring_bean_lifecycle" template="com/springsource/insight/plugin/springcore/spring_bean_lifecycle.ftl"/>

    <bean id="springCoreLifecycleMethodEndPointAnalyzer"
          class="com.springsource.insight.plugin.springcore.SpringLifecycleMethodEndPointAnalyzer"
          factory-method="getInstance"
          lazy-init="true"
        />

    <bean id="springCorePluginRuntimeDescriptor"
          class="com.springsource.insight.plugin.springcore.SpringCorePluginRuntimeDescriptor"
          factory-method="getInstance"
          lazy-init="true"
        />

</beans>
